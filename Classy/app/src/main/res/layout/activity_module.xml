<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lucis.classy.ModuleActivity">

    <Button
        android:text="create class"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textAllCaps="true"
        android:textSize="27sp"
        android:textAlignment="center"
        android:paddingBottom="9dp"
        android:background="@drawable/buttonuni"
        android:id="@+id/create"
        android:onClick="createClass"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textViewModule"/>

    <Button
        android:text="View Class"
        android:textAllCaps="true"
        android:textSize="27sp"
        android:textAlignment="center"
        android:paddingBottom="9dp"
        android:background="@drawable/buttonuni"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/view"
        android:onClick="viewClass"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/create"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Module"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:id="@+id/textViewModule" />

</RelativeLayout>
